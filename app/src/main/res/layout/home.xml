<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_food2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/food"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_food"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_cardiovascular"
        android:layout_width="145dp"
        android:layout_height="124dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardiovascular" />

    <ImageView
        android:id="@+id/img_sleep"
        android:layout_width="135dp"
        android:layout_height="122dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/img_appointment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sleep_logo"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logout_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="#0D0E0D"
        android:textSize="21sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/step_counter_btn"
        app:layout_constraintTop_toBottomOf="@+id/step_counter_btn" />

    <ImageView
        android:id="@+id/img_fitness"
        android:layout_width="122dp"
        android:layout_height="116dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toStartOf="@+id/img_food"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitness" />

    <TextView
        android:id="@+id/txt_sleep"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="4dp"
        android:text="@string/sleep"
        app:layout_constraintEnd_toStartOf="@+id/txt_appointment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sleep"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_appointment"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/appointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_appointment"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_food"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="@string/cardiovascular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cardiovascular"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="137dp"
        android:layout_height="116dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food_logo" />

    <TextView
        android:id="@+id/txt_fitness"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="@string/fitness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_fitness"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/step_counter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36dp"
        android:text="@string/sync_device"
        android:textAllCaps="false"
        android:textColor="#0D0E0D"
        android:textSize="21sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toEndOf="@+id/img_appointment"
        app:layout_constraintTop_toBottomOf="@+id/txt_food2" />

    <ImageView
        android:id="@+id/img_appointment"
        android:layout_width="136dp"
        android:layout_height="127dp"
        android:layout_marginTop="372dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appointment" />

</androidx.constraintlayout.widget.ConstraintLayout>