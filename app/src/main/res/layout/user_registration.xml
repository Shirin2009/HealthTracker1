<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground1">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="50dp"
        android:orientation="vertical">

    <EditText
        android:id="@+id/full_name_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:gravity="left"
        android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/age_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:hint="Age"
            android:inputType="number"
            android:padding="10dp"
            android:gravity="left"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/dr_name_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:hint="Doctor Name (optional)"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:gravity="left"
            android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/email_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:padding="10dp"
        android:textColorHint="@android:color/white"
        android:gravity="left"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"/>

    <EditText
        android:id="@+id/password_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textWebPassword"
        android:padding="10dp"
        android:textColorHint="@android:color/white"
        android:gravity="left"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="25dp"
    android:orientation="horizontal"
    android:typeface="serif">
        <Button
            android:id="@+id/save_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#0D0E0D"
            android:textSize="21sp"
            android:typeface="serif"/>

        <Button
            android:id="@+id/cancel_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#0D0E0D"
            android:textSize="21sp"
            android:typeface="serif"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>